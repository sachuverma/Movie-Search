<%- include ('partials/header') %>

<div class="container">

 <div class="jumbotron my-bg text-light">
  <h1><i class="fas fa-check"></i> MATCHING RESULTS</h1>
  <p>
  	Top Ten Results Searched From IMDb Website
  </p>
  	<a class="btn btn-primary text-light" href="/">Search Again</a>
 </div>

<% if(data["Search"] != undefined) { %>
 <div class="row text-center" id="cards-container">
  <% data["Search"].forEach(function(movie){ %>
	<div class="card my-bg rounded shadow" onclick="window.location.href = '/detail/:<%= movie["imdbID"]%>';">
	  <img class="card-img-top" src="<%= movie["Poster"] %>" alt="Poster Not Available">
	  
	  <div class="card-body">
	    <p class="card-text">
	    	<strong><%= movie["Title"] %></strong> 
		    - <%= movie["Year"]%>
		</p>
	  </div>
	</div>
  <% }) %>

<% } else { %>
  <h1>Title Can Not Be Empty</h1>
<% } %>  

</div>  

</div>
<%- include ('partials/footer') %>
